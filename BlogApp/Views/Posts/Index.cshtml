@model IEnumerable<Post>

<h2>Blog Posts</h2>

<a href="/Posts/Create">Create New Post</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt</td>
                <td>
                    <a href="/Posts/Edit/@post.Id">Edit</a> |
                    <a href="/Posts/Delete/@post.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
