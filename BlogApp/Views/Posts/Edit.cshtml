@model Post

<h2>Edit Blog Post</h2>

<form asp-action="Edit" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Content</label>
        <textarea asp-for="Content"></textarea>
    </div>
    <button type="submit">Save Changes</button>
</form>
